.person{
  float: left;
  height: 80px;
  padding-right: 10px;
  position: relative;

}
.person .pic{
  max-width: 50px;
  max-height: 50px;
}
.person .name{
  font-size: 12px;
  width: 50px;
  text-align: center;
}
.person .mask{
  background: rgba(0, 0, 0,.6);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}